# Environment Variables Example
# Copy this file to .env and update the values

# Database Configuration
DATABASE_URL=postgresql://admin:password123@localhost:5432/taskmanager
POSTGRES_DB=taskmanager
POSTGRES_USER=admin
POSTGRES_PASSWORD=password123

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration
SECRET_KEY=your-super-secret-jwt-key-change-in-production-please
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Service URLs (for API Gateway)
USER_SERVICE_URL=http://user-service:4000
TASK_SERVICE_URL=http://task-service:5000
NOTIFICATION_SERVICE_URL=http://notification-service:6000

# Email Configuration (Update with your actual credentials)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@taskmanager.com

# Frontend Configuration
REACT_APP_API_URL=http://localhost:3000

# Development Configuration
NODE_ENV=development
DEBUG=true
LOG_LEVEL=info

# Production Configuration (uncomment for production)
# NODE_ENV=production
# DEBUG=false
# LOG_LEVEL=warn

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=*

# Cloud Provider Configuration (Update based on your provider)
# AWS
# AWS_REGION=us-west-2
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key

# Azure
# AZURE_SUBSCRIPTION_ID=your-subscription-id
# AZURE_RESOURCE_GROUP=your-resource-group
# AZURE_AKS_CLUSTER=your-aks-cluster

# OCI
# OCI_TENANCY_ID=your-tenancy-id
# OCI_USER_ID=your-user-id
# OCI_FINGERPRINT=your-fingerprint
# OCI_PRIVATE_KEY_PATH=path-to-private-key

# Container Registry Configuration
CONTAINER_REGISTRY=ghcr.io
IMAGE_TAG=latest
IMAGE_PULL_POLICY=Always

# Kubernetes Configuration
NAMESPACE=task-manager
CLUSTER_NAME=task-manager-cluster
STORAGE_CLASS=standard

# Load Balancer Configuration
LOAD_BALANCER_TYPE=ClusterIP  # ClusterIP, NodePort, LoadBalancer
INGRESS_CLASS=nginx

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
